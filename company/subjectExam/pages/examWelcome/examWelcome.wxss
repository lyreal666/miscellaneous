@import "/templates/examPostPublic/examPublic.wxss";
Page {
    width: 100%;
    height: 100%;
    background-color: #2e70af;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.title-wrapper {
    width: 100%;
    height: 60rpx;
    text-align: left;
    margin-bottom: 50rpx;
}

.title {
    color: #fff;
    margin-left: 20rpx;
    font-size: 32rpx;
}

.content {
    position: relative;
    width: 480rpx;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 50rpx;
    font-size: 28rpx;
    background-color: #86b1d3;
    border-radius: 30rpx;
}

.contentItem {
    margin-bottom: 20rpx;
    color: #fff;
}

.hole {
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: #fff;
    right: 30rpx;
    top: 30rpx;
}