.options {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-left: 80rpx;
}

.option {
    display: flex;
    justify-content: flex-start;
}

.question-option {
    text-align: left;
    display: flex;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.answer-option {
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    color: gray;
}

.option-circle {
    width: 45rpx;
    height: 45rpx;
    border: 2rpx solid gray;
    border-radius: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.option-flag {
    font-size: 0.8rem;
}

.option-content {
    margin-left: 20rpx;
    font-size: 0.82rem;
}

.right-answer .option-circle{
    background-color: #3371b0;
    color: white;
    margin-left: 20rpx;
}
.right-answer .option-content {
    color: #3371b0;
}

.wrong-answer {
    display: none;
}

.selected-wrong-option {
    margin-left: 20rpx;
}

.selected-wrong-option .option-circle{
    background-color: red;
    color: white;
}

.selected-wrong-option .option-content {
    color: red;
    margin-left: 20rpx;
}

