.options {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-left: 80rpx;
    align-items: flex-start;
}

.question-option {
    text-align: left;
    display: flex;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.option-circle {
    width: 45rpx;
    height: 45rpx;
    border: 2rpx solid gray;
    border-radius: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.option-flag {
    font-size: 32rpx;
}

.option-content {
    margin-left: 20rpx;
    font-size: 32rpx;
}

.selected-wrong-option {
    color: red;
}

.right-option {
    color: #3270b0
}

.selected-wrong-option .option-circle{
    background-color: red;
    color: white;
}

.right-option .option-circle{
    background-color: #3270b0;
    color: white;
}


