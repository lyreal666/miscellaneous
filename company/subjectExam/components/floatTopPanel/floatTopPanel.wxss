.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    transition: transform .1s ease-in;
}


.gray-bg {
    width: 100%;
    flex-basis: 350rpx;
    flex-grow: 0;
    background-color: gray;
    opacity: 0.2;
}


.content {
    width: 100%;
    display: flex;
    flex-direction: column;
    flex: 1;
    background-color: white;
}

.answer-infos {
    flex-basis: 90rpx;
    flex-grow: 0;
    display: flex;
    align-items: center;
    flex-direction: row;
    flex-shrink: 0;
    border-bottom: 5rpx solid #3270b0; 
    font-size: 36rpx;
}

.infos-wrapper {
    display: flex;
}

.info {
    width: 100rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.info-image {
    width: 1rem;
    height: 1rem;
}

.delete-recording {
    color: red;
    padding-left: 10rpx;
    padding-right: 10rpx;
    margin-left: 300rpx;
}

.question-select {
    flex-grow: 1;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    overflow: auto;
}

.option {
    width: 100rpx;
    height: 100rpx;
    border: 4rpx solid gray;
    border-radius: 50%;
    margin: 10rpx 10rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 0.8rem;
    font-weight: lighter;
    background-color: white;
}

.answer-right-option {
    border: 4rpx solid green;
}

.answer-wrong-option {
    border: 4rpx solid red;
}


